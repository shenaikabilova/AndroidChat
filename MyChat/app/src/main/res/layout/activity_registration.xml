<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kabilova.client.RegistrationActivity">

    <TextView
        android:text="@string/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/textViewUsername"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:fontFamily="casual"
        android:textSize="14sp"
        android:textStyle="normal|bold" />

    <Button
        android:text="@string/hasAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonHasAccount"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:fontFamily="casual"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/settingsPass1"
        android:layout_toEndOf="@+id/textViewPass1"
        android:layout_marginTop="139dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/settingsPass1"
        android:hint="@string/hintPass1"
        android:fontFamily="casual"
        android:textSize="14sp"
        android:layout_below="@+id/settingsUsername"
        android:layout_alignStart="@+id/settingsUsername" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/settingsUsername"
        android:hint="@string/hintUsername"
        android:textSize="14sp"
        android:fontFamily="casual"
        android:textAlignment="viewStart"
        android:layout_alignBaseline="@+id/textViewUsername"
        android:layout_alignBottom="@+id/textViewUsername"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/textViewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPass1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:fontFamily="casual"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/settingsPass1"
        android:layout_alignBottom="@+id/settingsPass1"
        android:layout_alignStart="@+id/textViewUsername" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/settingsPass2"
        android:hint="@string/hintPass2"
        android:fontFamily="casual"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/textViewPass2"
        android:layout_alignBottom="@+id/textViewPass2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/textViewPass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPass2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:fontFamily="casual"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/settingsPass1"
        android:layout_alignStart="@+id/textViewPass1" />

    <Button
        android:text="@string/buttonRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRegistration"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="14sp"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:layout_below="@+id/settingsPass2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

</RelativeLayout>
